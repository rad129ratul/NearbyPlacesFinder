{
  "expo": {
    "name": "NearbyPlacesFinder",
    "slug": "nearbyplacesfinder",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0d6efd"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.sparktech.nearbyplacesfinder",
      "config": {
        "googleMapsApiKey": "YOUR_IOS_API_KEY_HERE"
      },
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs your location to show nearby places and provide directions.",
        "NSLocationAlwaysUsageDescription": "This app needs your location to show nearby places even when not in use."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0d6efd"
      },
      "package": "com.sparktech.nearbyplacesfinder",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_ANDROID_API_KEY_HERE"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow NearbyPlacesFinder to use your location to find places nearby."
        }
      ]
    ]
  }
}